
<div>
  <div>
    <section>
      <div>
        <h1>
          Bienvenido <span id="username">{{username}}!</span>
        </h1>
        <input onclick="location.href = '/logout'" value="Logout"/>
      </div>
    </section>
    <section>
      <h2>Products</h2>
      <form id="enviarProducto">
        <div>
          <label>
            <span>Product name</span>
          </label>
          <label>
            <span>Name</span>
            <input
              type="text"
              placeholder="Book"
              id="nombreProducto"
            />
          </label>
        </div>
        <div>
          <label>
            <span>Enter amount</span>
          </label>
          <label>
            <span>Price</span>
            <input
              type="number"
              placeholder="10"
              id="precioProducto"
            />
          </label>
        </div>
        <div>
          <label>
            <span>Thumbnail URL</span>
          </label>
          <label>
            <span>URL</span>
            <input
              type="text"
              placeholder="https://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png"
              id="urlProducto"
            />
          </label>
        </div>
        <div>
          <input type="submit" value="Submit" />
        </div>
      </form>
      <div>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Picture</th>
            </tr>
          </thead>
          <tbody id="products"></tbody>
        </table>
      </div>
    </section>
    <section>
      <h2>Chat</h2>
      <div>
        <form
          id="enviarMensaje"
          action="#"
        >
          <input
            required
            type="text"
            placeholder="Usuario"
            name="usernameAlias"
            id="usernameAlias"
          />
          <input
            required
            type="text"
            placeholder="Mensaje"
            name="message"
            id="messageInput"
          />
          <button
            type="submit"
            value="Enviar"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5 text-white"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"
              />
            </svg>
          </button>
        </form>
      </div>
      <div>
        <div>
          <ul id="messageOutput"></ul>
        </div>
      </div>
    </section>
  </div>
</div>