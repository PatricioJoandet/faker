
<div >
  <div >
    <div >
      <h1 >Registrarse</h1>
    </div>
    <form
      action="/signup"
      method="post"
      role="form"
      autocomplete="off"
    >

      <input
        id="username"
        name="username"
        placeholder="Your username"
        type="text"
        required
      />

      <input
        id="password"
        name="password"
        placeholder="New password"
        type="password"
        required
      />

      <input type="submit" value="Sign up" />
    </form>
    <div>
      <input
        onclick="location.href = '/login'"
        value="Log In"
      />
    </div>
  </div>
</div>